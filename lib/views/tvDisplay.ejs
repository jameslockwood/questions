<!DOCTYPE html>
<html>
<head>
	
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"/>

	<!-- our lovely css -->
	<link href="assets/css/bootstrap.min.css" rel="stylesheet" media="screen">
	<link href="assets/css/bootstrap-responsive.css" rel="stylesheet" media="screen">
	<link href="assets/css/questions.css" rel="stylesheet" media="screen">

	<!-- socket stuff -->
	<script src="/socket.io/socket.io.js"></script>
	
	<!-- add external libs that we wish to use in our app -->
	<script type="text/javascript" src="/libs/underscore.js"></script>
	<script type="text/javascript" src="/libs/zepto.js"></script>
	<script type="text/javascript" src="/libs/backbone.js"></script>
	<script type="text/javascript" src="/libs/handlebars.js"></script>
	<script type="text/javascript" src="/libs/module.js"></script>

	<!-- infrastructure -->
	<script type="text/javascript" src="/script/infrastructure/view.js"></script>

	<!-- app -->
	<script type="text/javascript" src="/script/models/models.js"></script>

	<script type="text/javascript" src="/script/views/addQuestion.js"></script>
	<script type="text/javascript" src="/script/views/questionResults.js"></script>
	<script type="text/javascript" src="/script/views/vote.js"></script>

	<script type="text/javascript" src="/script/tv.js"></script>

	<!-- templates -->
	<script type="template" id="answerTemplate">
		{{#each answers}}
		<div class="answer">
			<h4>{{text}}</h4>
			<div class="imageWrapper" data-id="{{id}}">
				<img src="{{image}}" alt="{{text}}" data-id="{{id}}"/>
			</div>
		</div>
		{{/each}}
	</script>	

</head>
<body>
	<nav>
		<h1>Quiz of the Year 2012</h1>
	</nav>
	<section id="app-wrapper" class="loading">
		<section id="loading"></section>
		<section id="add">
			<h2>Ask a question</h2>
			<p>
				Visit <span>something.com/</span> on your phone to propose a question.
			</p>
		</section>
		<section id="ongoing">
			<section class="question">
				<span id="text">Question Goes Here</span>
			</section>		
			<section class="answers">
				Answers Here
			</section>
		</section>
		<section id="results">
		</section>
	</section>
	<footer>
		Lovingly made by 4Heads - A Minor Smash Production &copy; 2013
	</footer>
	<script>
		var currentQuestion = <%- currentQuestion %>;
	</script>
</body>
</html>

